rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Each user has their own "club" document they can read and write to.
    match /clubs/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Users can only access documents (players, coaches, etc.) that belong to them.
    // This is checked by matching the document's userId field with the authenticated user's UID.
    match /{collection}/{docId} {
      allow read, write, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // A user can create a document as long as they are authenticated and the new document's
    // userId field is set to their own UID. This prevents users from creating documents for others.
     match /{collection}/{docId} {
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
     }
  }
}
